@model List<CoreAndFood.Models.Category>
@{
    }

<h2>Category list</h2>

<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Category Name</td>
        <td>Status</td>
        <td>Delete</td>
        <td>Update</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryId</td>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a asp-controller="Category" asp-action="CategoryDelete" asp-route-id="@x.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a asp-controller="Category" asp-action="CategoryGet" asp-route-id="@x.CategoryId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a asp-controller="Category" asp-action="CategoryAdd" class="btn btn-primary">New Category</a>