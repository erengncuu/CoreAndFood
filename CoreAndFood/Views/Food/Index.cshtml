@model List<CoreAndFood.Models.Food>
@{
}

<h2>Food List</h2>

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Food Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Category Name</td>
        <td>Delete</td>
        <td>Update</td>
        <td>Details</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FoodId</td>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>
            <td><a href="#" class="btn btn-danger">Delete</a></td>
            <td><a href="#" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">New Food</a>
